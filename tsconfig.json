{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@Components/*": [
        "src/Components/*"
      ],
      "@TagDs/*": [
        "src/tag/*"
      ],
      "@Context/*": [
        "src/Context/*"
      ],
      "@Utils/*": [
        "src/utils/*"
      ],
      "@Pages/*": [
        "src/Pages/*"
      ],
      "@Hooks/*": [
        "src/hooks/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}